@{
    Layout = "_DashboardLayout";
}
<style>
    .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        /*margin-top: -50px;*/
    }

    .box1, .box2, .box3{
        width: 100%;
        height: 150px;
        border-radius: 10px;
        padding: 10px;
        color: #ffffff;
        display: flex;
    }

    .box1 {
        background-color: #45634D;
        box-shadow: rgba(69, 99, 77, 1) 0px 25px 20px -20px;
    }

    .box2 {
        background-color: #DEA06B;
        box-shadow: rgba(222, 160, 107, 1) 0px 25px 20px -20px;
    }

    .box3 {
        background-color: #305992;
        box-shadow: rgba(48, 89, 146, 1) 0px 25px 20px -20px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<div class="grid mb-3">
    <div class="box1">
        <div class="d-flex flex-column w-100">
            <p class="fw-bold" style="font-size: 14px">Total Products</p>
            <div class="d-flex justify-content-between w-100">
                <h1 style="font-size: 60px">@ViewBag.TotalProducts</h1>
                <img src="/assets/day-322-aktivitas-di-dapur_638785-1846-removebg-preview (1).png" width="60" height="50" />
            </div>

        </div>
    </div>

    <div class="box2">
        <div class="d-flex flex-column w-100">
            <p class="fw-bold" style="font-size: 14px">Total Categories</p>
            <div class="d-flex justify-content-between w-100">
                <h1 style="font-size: 60px">@ViewBag.TotalCategories</h1>
                <img src="/assets/car-handrawn-doodle-illustration-vector-set_819052-348-removebg-preview (1).png" width="80" height="50" />
            </div>
        </div>
    </div>

    <div class="box3">
        <div class="d-flex flex-column w-100">
            <p class="fw-bold" style="font-size: 14px">Total Orders</p>
            <div class="d-flex justify-content-between w-100">
                <h1 style="font-size: 60px">@ViewBag.TotalOrders</h1>
                <img src="/assets/sketch-one-line-drawing-car_566661-4121__2_-removebg-preview (1).png" width="40" height="50" />
            </div>
        </div>
    </div>
</div>
<div class="w-75">
    <canvas id="barChart" width="100" height="50"></canvas>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get the data from ViewBag or set it manually
        var totalProducts = @ViewBag.TotalProducts;
        var totalCategories = @ViewBag.TotalCategories;
        var totalOrders = @ViewBag.TotalOrders;

        var ctx = document.getElementById("barChart").getContext("2d");

        var barChart = new Chart(ctx, {
            type: "bar",
            data: {
                labels: ["Total Products", "Total Categories", "Total Orders"],
                datasets: [
                    {
                        label: "Count",
                        data: [totalProducts, totalCategories, totalOrders],
                        backgroundColor: ["#45634D", "#DEA06B", "#305992"],
                    },
                ],
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                    },
                },
            },
        });
    });
</script>


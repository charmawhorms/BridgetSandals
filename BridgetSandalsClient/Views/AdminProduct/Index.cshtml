@model BridgetSandalsClient.Models.ViewModel.ProductCategoryVM
@{
    Layout = "_DashboardLayout";
}
<div class="d-flex justify-content-between align-items-center me-4">
    <h1>Products</h1>
    <a asp-action="Create" class="btn btn-success p-1">+ Add Product</a>
</div>


<div class="w-100">
    <div class="row w-100">
        <p class="fw-light mb-3" style="text-align: left;">@Model.Products.Count() products</p>
        @foreach (var product in Model.Products)
        {
            //Displays list of Products
            @await Html.PartialAsync("_AdminProductCardView", product)
        }
    </div>
</div>
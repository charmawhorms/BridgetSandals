@model BridgetSandalsClient.Models.Product


<div class="col-lg-3 col-md-4 col-sm-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
    <!--CARD-->
    <div class="card mb-5 p-0" style="width: 15rem;">
        <div style="background-color: #ECE3D4">
            @if (!string.IsNullOrEmpty(Model.ProductImageFilePath))
            {
                <img class="card-img-top p-0" src="@Model.ProductImageFilePath" alt="@Model.Name" width="100%" height="200px" />
            }
            <div class="card-overlay">
                <span class="w-100 d-flex justify-content-center">
                    <a asp-route-id="@Model.Id" asp-area="" asp-controller="AdminProduct" asp-action="Edit" class="btn btn-primary w-50 p-2" style="margin-top: 200px; background-color: #113034; border-radius: 0px; border: none"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-route-id="@Model.Id" asp-area="" asp-controller="AdminProduct" asp-action="Delete" class="btn btn-primary w-50 p-2" style="margin-top: 200px; background-color: #113034; border-radius: 0px; border: none"><i class="fa-solid fa-trash"></i></a>
                </span>
            </div>
        </div>

        <div class="card-body">
            <h5 class="card-title" style="text-align: left; font-weight:400">@Model.Name</h5>
            <p class="card-text fw-lighter" style="text-align: left">@Model.ShortDescription</p>
            <p class="fw-bold" style="text-align: left">$@Model.Price.ToString()</p>
        </div>
    </div>
</div>


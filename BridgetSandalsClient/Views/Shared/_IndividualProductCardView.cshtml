<div class="col-lg-3 col-md-4 col-sm-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
    <!--CARD-->
    <div class="card mb-5 p-0" style="width: 18rem;">
        <div style="background-color: #ECE3D4">
            @if (!string.IsNullOrEmpty(Model.ProductImageFilePath))
            {
                <img class="card-img-top p-0" src="@Model.ProductImageFilePath" alt="@Model.Name" width="100%" height="300px" />
            }
            <div class="card-overlay">
                @*<span class="d-flex p-2 justify-content-end align-items-center">
                    <span class="d-flex align-items-center">

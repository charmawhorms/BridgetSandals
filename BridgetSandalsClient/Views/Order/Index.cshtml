@model IEnumerable<BridgetSandalsClient.Models.Order>

@{
    Layout = "_DashboardLayout";
}

<div style="height: 100vh">
    <div class="d-flex justify-content-between align-items-center me-4 mb-5">
        <h1>Orders</h1>
        <span>
            <a asp-action="Create" class="btn btn-success p-1">+ Add Order</a>
            <a asp-action="" class="btn btn-success p-1">Export as PDF</a>
        </span>

    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <div class="w-75 d-flex" role="group">
                            <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-success sm mr-2">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-route-id="@item.Id" asp-action="Details" class="btn btn-info sm mr-2">
                                <i class="fa-solid fa-info px-1"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger sm mr-2" onclick="return confirm('Are you sure you want to delete this category?')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@model IEnumerable<BridgetSandalsClient.Models.Product>
@{
    ViewData["Title"] = "Home";
}


<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="d-flex justify-content-between">
                <div class="p-5" style="width: 40%; background-color: #45634D;">
                    <h1 class="domine-font text-light fw-bold mb-4 lh-base" style="margin-top: 20%">
                        Ladies Exquisite Handmade Leather Sandals
                    </h1>

                    <p class="text-light lh-base" style="font-size: 16px; margin-top: 10%; margin-bottom: 20%">
                        Our high-quality leather sandals are durable,
                        comfortable, and stylish, featuring a soft foot-bed
                        and supportive straps.
                    </p>

                    <a class="text-decoration-none text-dark bg-white" style="padding: 10px 40px;" asp-controller="Product" asp-action="Index">SHOP & SAVE</a>
                </div>
                <div class="" style="width: 60%">
                    <img src="~/assets/banner-slipper1.png" width="100%" height="auto" alt="Yellow and green strap sandal" />
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-between">
                <div class="p-5" style="width: 40%; background-color: #DEA06B">
                    <h1 class="domine-font text-light fw-bold mb-4 lh-base" style="margin-top: 20%">
                        Ladies Exquisite Handmade Leather Sandals
                    </h1>

                    <p class="text-light lh-base" style="font-size: 16px; margin-top: 10%; margin-bottom: 20%">
                        Our high-quality leather sandals are durable,
                        comfortable, and stylish, featuring a soft foot-bed
                        and supportive straps.
                    </p>

                    <a class="text-decoration-none text-dark bg-white" style="padding: 10px 40px;" asp-controller="Product" asp-action="Index">SHOP & SAVE</a>
                </div>
                <div class="" style="width: 60%">
                    <img src="/assets/banner-slipper2.png" width="100%" height="auto" alt="Yellow and green strap sandal" />
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex justify-content-between">
                <div class="p-5" style="width: 40%; background-color: #305992">
                    <h1 class="domine-font text-light fw-bold mb-4 lh-base" style="margin-top: 20%">
                        Ladies Exquisite Handmade Leather Sandals
                    </h1>

                    <p class="text-light lh-base" style="font-size: 16px; margin-top: 10%; margin-bottom: 20%">
                        Our high-quality leather sandals are durable,
                        comfortable, and stylish, featuring a soft foot-bed
                        and supportive straps.
                    </p>

                    <a class="text-decoration-none text-dark bg-white" style="padding: 10px 40px;" asp-controller="Product" asp-action="Index">SHOP & SAVE</a>
                </div>
                <div class="" style="width: 60%">
                    <img src="/assets/banner-slipper3.png" width="100%" height="auto" alt="Yellow and green strap sandal" />
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div style="background-color: #E4ECE6;">
    <div class="scrolling-text-brands slick-carousel">
        <h1>ROSE</h1>
        <h1>MICHELLE</h1>
        <h1>KAY</h1>
        <h1>BITTE</h1>
        <h1>CUTAWAY</h1>
        <h1>ARROW</h1>
    </div>
</div>

<p class="text-center" style="font-size: 24px; margin-top: 100px">
    Leather sandals you can trust and love
</p>

<div class="row w-100 mt-5 px-5 d-flex justify-content-between">
    <!--Displays the first four product from the collection-->
    @foreach (var product in Model.Take(4))
    {
        @await Html.PartialAsync("_IndividualProductCardView", product)
    }
</div>

<div class="w-100 d-flex justify-content-center mt-5">
    <a class="text-decoration-none text-light text-center" style="padding: 10px 60px; background-color: #113034;" asp-controller="Product" asp-action="Index">VIEW ALL</a>
</div>

<div class="d-flex justify-content-center mt-5">
    <iframe width="320" height="560" src="https://www.youtube.com/embed/barCGyXGnSY"
            title="Bridget Sandals Unboxing #bridgetsandals #unboxing #jamaicangirl #newlove #pickyourfave #shorts"
            frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen>
    </iframe>
</div>

<p class="text-center fw-light mt-5" style="font-size: 5rem">A sandal awaits you!</p>






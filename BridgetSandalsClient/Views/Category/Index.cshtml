@model IEnumerable<BridgetSandalsClient.Models.Category>

@{
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center me-4">
    <h1>Categories</h1>
    <a asp-action="Create" class="btn btn-success p-1">+ Add Category</a>
</div>

<table class="table mt-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-success sm mr-2">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-danger sm mr-2" onclick="return confirm('Are you sure you want to delete this category?')">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
